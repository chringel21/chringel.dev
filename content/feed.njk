---
permalink: /index.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.description }}</subtitle>
  <link
    href="{{ metadata.url }}/index.xml"
    rel="self"
    type="application/atom+xml"
  />
  <link href="{{ metadata.url }}" rel="alternate" type="text/html" />
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {% if collections.posts %}
  <updated>{{ collections.allReverse | rssLastUpdatedDate }}</updated>
  {% endif %}
  <id>{{ metadata.url }}/</id>
  {%- for post in collections.allReverse -%}
    {% set absolutePostUrl %}
      {{ post.url | url | absoluteUrl(metadata.url)}}
    {% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}" />
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">
      <![CDATA[
      {% if post.data.cover %}
        {# {% imagenjk post.data.cover.src, post.data.cover.caption, [50vw] %} #}
      {% endif %}
      {{ post.templateContent | safe }}
      ]]>
    </content>
  </entry>
  {%- endfor -%}
</feed>
